<h1>Sign Up</h1>

<%= form_for @user do |f| %>


 <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_area :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :confirm_password %><br />
    <%= f.text_field :confirm_password %>

  <div class="actions">
    <%= f.submit %>

<% end %>
