<h1>Listing reviews</h1>

<table>
  <tr>
    <th>User</th>
    <th>Product</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.user %></td>
    <td><%= review.product %></td>
    <td><%= review.comment %></td>
    <td><%= link_to 'Show', product_review_path(review.product, review) %></td>
    <td><%= link_to 'Edit', edit_product_review_path(review.product, review) %></td>
    <td><%= link_to 'Destroy', product_review_path(review.product, review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

